<!-- Styles -->
<style>
  .restaurant-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 20px;
    padding: 15px;
  }

  .restaurant-item {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .restaurant-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
  }

  .restaurant-image-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 12px 12px 0 0;
  }

  .restaurant-images {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .restaurant-image {
    min-width: 100%;
  }

  .restaurant-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
  }

  .buttons-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
  }

  .view-edit-delete-btn a,
  .view-edit-delete-btn button {
    margin-right: 5px;
  }

  .status-btn,
  .view-edit-delete-btn {
    display: inline-block;
  }

  .carousel-arrow {
    position: absolute;
    top: 50%;
    z-index: 10;
    background-color: transparent;
    color: white;
    border: none;
    padding: 15px;
    font-size: 20px;
    cursor: pointer;
    transform: translateY(-50%);
    border-radius: 50%;
    outline: none;
  }

  .carousel-arrow:focus {
    outline: none;
  }

  .left-arrow {
    left: 10px;
  }

  .right-arrow {
    right: 10px;
  }

  .restaurant-info {
    padding: 12px 10px;
    text-align: center;
  }

  .restaurant-info h5 {
    margin: 8px 0;
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }

  .restaurant-info .sub-category {
    font-size: 14px;
    color: #777;
    margin-bottom: 8px;
  }

  .restaurant-info .description {
    font-size: 14px;
    color: #555;
    margin: 6px 0;
  }

  .restaurant-info .size {
    font-size: 14px;
    color: #888;
    margin: 6px 0;
  }

  .price {
    font-size: 16px;
    font-weight: bold;
    color: #1e9e35;
    margin: 8px 0;
  }
</style>

<script>
  $(document).on("click", ".delete-btn", function () {
    const productId = $(this).data("id");

    if (confirm("Are you sure you want to delete this product?")) {
      $.ajax({
        url: `/subadmin/delete_product/${productId}`,
        type: "DELETE",
        success: function (response) {
          alert("Product deleted successfully!");
          location.reload();
        },
        error: function (xhr, status, error) {
          alert("Error deleting product: " + error);
        },
      });
    }
  });

  document.addEventListener("DOMContentLoaded", function () {
    const carousels = document.querySelectorAll(".restaurant-images");

    carousels.forEach((carousel, index) => {
      const images = carousel.children;
      let currentIndex = 0;
      let autoScroll;

      const startAutoScroll = () => {
        if (images.length > 1) {
          autoScroll = setInterval(() => {
            currentIndex = (currentIndex + 1) % images.length;
            carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
          }, 2000);
        }
      };

      const stopAutoScroll = () => {
        clearInterval(autoScroll);
      };

      carousel.addEventListener("mouseenter", startAutoScroll);
      carousel.addEventListener("mouseleave", stopAutoScroll);
    });
  });

  function moveSlide(direction, carouselId) {
    const carousel = document.querySelector(`#carousel-${carouselId}`);
    const images = carousel.children;
    const totalImages = images.length;

    if (!carousel.dataset.currentIndex) {
      carousel.dataset.currentIndex = 0;
    }

    let currentIndex = parseInt(carousel.dataset.currentIndex);

    if (direction === "left") {
      currentIndex = (currentIndex - 1 + totalImages) % totalImages;
    } else if (direction === "right") {
      currentIndex = (currentIndex + 1) % totalImages;
    }

    carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
    carousel.dataset.currentIndex = currentIndex;
  }
</script>

