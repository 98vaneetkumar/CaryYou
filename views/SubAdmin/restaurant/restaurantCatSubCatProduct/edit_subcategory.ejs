<div class="main-content">
    <section class="section">
      <div class="section-header">
        <h1>Edit subCategory</h1>
        <div class="section-header-breadcrumb">
          <div class="breadcrumb-item active"><a href="/subAdmin/dashboard">Dashboard</a></div>
          <div class="breadcrumb-item"><a href='/subAdmin/subCategory_list'>subCategory</a></div>
          <div class="breadcrumb-item">Edit subCategory</div>
        </div>
      </div>
  
      <div class="section-body">
        <div class="card">
          <div class="form-group text-left ml-3 mt-2">
            <button 
                type="button" 
                class="btn btn-dark rounded-pill d-flex align-items-center px-3" 
                onclick="goBack()" 
                aria-label="Go Back"
            >
                <i class="fas fa-arrow-left mr-2"></i> Back
            </button>
          </div>
          <form action="/subAdmin/update_subCategory" id="addForm" method="post" enctype="multipart/form-data">
            <div class="row mt-sm-4 justify-content-center">
              <div class="col-12 col-md-12 col-lg-4">
                <div class="card profile-widget bg-white">
                  <div class="profile-widget-header text-center py-3">
                    <img alt="image" width="200" height="200" id="blah" src="<%=subCategory.image%>"
                      class="profile_img rounded-circle border">
                    <input type="file" name="image" id="imgInp"
                      accept="image/*" onchange="previewImage(event)"
                      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                  </div>
                </div>
              </div>
  
              <div class="col-12 col-lg-10 offset-lg-0">
                <div class="card-body">
                  <div class="form-group col-12 floating-addon">
                    <label>Name</label>
                    <div class="input-group">
                      <input type="text" class="form-control" name="name" value="<%=subCategory.name%>" required>
                      <div class="input-group-append">
                        <div class="input-group-text">
                          <i class="fas fa-user"></i>
                        </div>
                      </div>
                    </div>
                    <input type="hidden" name="id" value="<%=subCategory._id%>">
                    <input type="hidden" name="restaurant" value="<%=restaurant%>">
                    <div class="invalid-feedback">
                      Please fill in the name
                    </div>
                  </div>
  
                  <div class="form-group">
                    <div class="col-sm-12 col-md-12 text-right mt-4">
                      <button type="submit" class="btn btn-success">Update</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
  
  <style>
    .error {
      color: red !important;
    }
  
    .input-group .form-control {
      border-right: none; /* Remove the right border of the input box */
    }
  
    .input-group-append .input-group-text {
      background: #fff;
      border-left: none; /* Remove the left border of the icon box */
    }
  </style>
  
  <script>
    function goBack() {
      window.history.back();
    }
  
    function previewImage(event) {
      const reader = new FileReader();
      reader.onload = function () {
        const imgElement = document.getElementById('blah');
        imgElement.src = reader.result;
      }
      reader.readAsDataURL(event.target.files[0]);
    }
  
    $(document).ready(function () {
      jQuery.validator.addMethod("noSpace", function (value, element) {
        return value == '' || value.trim().length != 0;
      }, "No space allowed.");
  
      $('form[id="addForm"]').validate({
        rules: {
          name: {
            required: true,
            noSpace: true, // Ensures no spaces are allowed
          }
        },
        messages: {
          name: {
            required: "subCategory name is required.",
            noSpace: "Spaces are not allowed in the subCategory name.",
          }
        },
        submitHandler: function (form) {
          form.submit();
        }
      });
    });
  </script>
  