<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Active Orders</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/subAdmin/dashboard">Dashboard</a></div>
        <div class="breadcrumb-item">Active Orders</div>
      </div>
    </div>
    <div class="col-12 col-mt-5">
      <div class="card-datatable">
        <div class="table-responsive">
          <table id="myTable" class="table table-hover table-md">
            <thead>
              <tr style="background-color: #ebf2f2;">
                <th scope="col">S No.</th>
                <th scope="col">Order By</th>
                <!-- <th scope="col">Restaurant</th> -->
                <th scope="col">Item</th>
                <th scope="col">Order D/T</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orderdata.forEach(function(data, i) { %>
                <tr>
                  <td><%= data.sNo %></td>
                  <td><%= data.orderBy %></td> <!-- Display the 'name' of the user -->
                  <!-- <td><%= data.restaurant %></td> -->
                  <td><%= data.item %></td>
                  <td><%= data.orderDateTime %></td>
                  <td>
                    <a href="/subAdmin/active_view_order/<%=restaurant%>/<%= data.id %>" class="btn btn-sm bg-warning">
                      <i class="fa fa-eye" aria-hidden="true"></i> View
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  $(document).ready(function () {
    $('#myTable').DataTable({
      dom: 'Bfrtip',
      buttons: ['excel', 'print']
    });
  });
</script>
