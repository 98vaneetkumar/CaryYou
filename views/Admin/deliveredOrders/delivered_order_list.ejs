<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Delivered Orders</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a></div>
        <div class="breadcrumb-item">Delivered Orders</div>
      </div>
    </div>
    <div class="col-12 col-mt-5">
      <div class="card-datatable">
        <div class="table-responsive">
          <table id="myTable" class="table table-hover table-md">
            <thead>
              <tr style="background-color: #ebf2f2;">
                <th scope="col">S No.</th>
                <th scope="col">Order By</th>
                <th scope="col">Restaurant</th>
                <th scope="col">Item</th>
                <th scope="col">Order D/T</th>
              </tr>
            </thead>  
            <tbody>
              <% orderdata.forEach(function(data, i) { %>
                <tr>
                  <td><%= data.sNo %></td>
                  <td><%= data.orderBy %></td> <!-- Display the 'name' of the user -->
                  <td><%= data.restaurant %></td> <!-- Restaurant Name -->
                  <td><%= data.item %></td> <!-- Item Name -->
                  <td><%= data.orderDateTime %></td> <!-- Order Date/Time -->                 
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  $(document).ready(function () {
    $('#myTable').DataTable({
      dom: 'Bfrtip',
      buttons: ['excel', 'pdf', 'print']
    });
  });
</script>
