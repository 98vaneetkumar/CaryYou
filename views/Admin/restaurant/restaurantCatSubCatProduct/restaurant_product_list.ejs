<script>
  let currentSlideIndex = {};

  function moveSlide(direction, index) {
    const imagesContainer = document.querySelectorAll('.restaurant-images')[index];
    const totalImages = imagesContainer.children.length;

    if (!currentSlideIndex[index]) {
      currentSlideIndex[index] = 0;  // Initialize the slide index if not already set
    }

    if (direction === 'left') {
      // Prevent moving left if at the first image
      if (currentSlideIndex[index] > 0) {
        currentSlideIndex[index] -= 1;
      }
    } else if (direction === 'right') {
      // Prevent moving right if at the last image
      if (currentSlideIndex[index] < totalImages - 1) {
        currentSlideIndex[index] += 1;
      }
    }

    // Slide the images based on the current index
    imagesContainer.style.transform = `translateX(-${currentSlideIndex[index] * 100}%)`;
  }
</script>



