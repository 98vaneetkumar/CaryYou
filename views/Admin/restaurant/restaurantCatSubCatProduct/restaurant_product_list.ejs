<script>
  // Handle Top Up Button visibility and smooth scroll to top
  window.onscroll = function() {
    // Show the button after scrolling 100px down
    if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
      document.getElementById("topUpButton").style.display = "block";
    } else {
      document.getElementById("topUpButton").style.display = "none";
    }
  };

  // When the button is clicked, smoothly scroll to the top
  document.getElementById("topUpButton").onclick = function() {
    window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
  };
</script>

<script>
  $(document).on('click', '.view-product-btn', function () {
    const productId = $(this).data('id');

    $.ajax({
      url: `/admin/restaurant_product_view/${productId}`,
      method: 'GET',
      success: function (response) {
        $('#productDetailContent').html(`
          <div class="text-center">
            <h4>${response.itemName}</h4>
            <p>${response.description || 'No description available.'}</p>
            <img src="${response.image}" alt="${response.itemName}" class="img-fluid">
            <p class="price">$${response.price}</p>
          </div>
        `);
      },
      error: function () {
        $('#productDetailContent').html('<p class="text-danger">Failed to load product details.</p>');
      },
    });
  });
</script>

<script>
  let currentSlideIndex = {};

  function moveSlide(direction, index) {
    const imagesContainer = document.querySelectorAll('.restaurant-images')[index];
    const totalImages = imagesContainer.children.length;

    if (!currentSlideIndex[index]) {
      currentSlideIndex[index] = 0;
    }

    if (direction === 'left') {
      if (currentSlideIndex[index] > 0) {
        currentSlideIndex[index] -= 1;
      }
    } else if (direction === 'right') {
      if (currentSlideIndex[index] < totalImages - 1) {
        currentSlideIndex[index] += 1;
      }
    }

    imagesContainer.style.transform = `translateX(-${currentSlideIndex[index] * 100}%)`;
  }
</script>

