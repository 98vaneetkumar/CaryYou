<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1><%= viewuser.name %></h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active">
          <a href="/admin/dashboard">Dashboard</a>
        </div>
        <div class="breadcrumb-item">Restaurant</div>
      </div>
    </div>

    <!-- Grid Container -->
    <div class="restaurant-grid">
      <% viewuser.products.forEach(function(data, i) { %>
        <div class="restaurant-item">
          <div class="restaurant-image-container">
            <div class="restaurant-images">
              <% data.images.forEach(function(image, index) { %>
                <div class="restaurant-image">
                  <img
                    src="<%= image ? image : 'https://avatar.iran.liara.run/public/boy?username=Ash' %>"
                    alt="<%= data.itemName %>"
                    class="img-fluid"
                  />
                </div>
              <% }); %>
            </div>

            <% if (data.images.length > 1) { %>
              <button class="carousel-arrow left-arrow" onclick="moveSlide('left', '<%= i %>')">&#10094;</button>
              <button class="carousel-arrow right-arrow" onclick="moveSlide('right', '<%= i %>')">&#10095;</button>
            <% } %>
          </div>

          <div class="restaurant-info">
            <h5><%= data.itemName %></h5>
            <p class="sub-category"><%= data?.subCategoryName %></p>
            <p class="price">$<%= data.price %></p>
            <div class="buttons-container">
              <div class="status-btn">
                <% if (data?.status == 1) { %>
                  <button
                    id="restaurantId_<%= data._id %>"
                    class="btn btn-sm btn-success status"
                    data-id="<%= data._id %>"
                    value="0"
                  >
                    Active
                  </button>
                <% } else { %>
                  <button
                    id="restaurantId_<%= data._id %>"
                    class="btn btn-sm btn-danger status"
                    data-id="<%= data._id %>"
                    value="1"
                  >
                    In-Active
                  </button>
                <% } %>
              </div>
              <div class="view-btn">
                <button 
                  class="btn btn-sm bg-warning view-product-btn" 
                  data-id="<%= data._id %>" 
                  data-toggle="modal" 
                  data-target="#productDetailModal">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
</div>

