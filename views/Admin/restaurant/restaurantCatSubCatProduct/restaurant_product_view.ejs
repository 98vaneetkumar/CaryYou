                <% } else { %>
                  <img src="/images/default_category_image.jpg" class="img-fluid rounded" style="max-width: 80%; max-height: 300px; object-fit: cover;">
                <% } %>
              </div>
            </div>
          </div>

          <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm rounded-lg">
              <div class="card-body text-center">
                <h4 class="font-weight-bold text-primary">Subcategory Image</h4>
                <% if (product.subCategoryImage) { %>
                  <img src="<%= product.subCategoryImage %>" class="img-fluid rounded" style="max-width: 80%; max-height: 300px; object-fit: cover;">
                <% } else { %>
                  <img src="/images/default_subcategory_image.jpg" class="img-fluid rounded" style="max-width: 80%; max-height: 300px; object-fit: cover;">
                <% } %>
              </div>
            </div>
          </div>
        </div>
        -->

      </div>
    </div>
  </section>
</div>

<style>
  /* Global Styles */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f4f7fc;
  color: #333;
}

.main-content {
  padding-top: 50px;
  padding-bottom: 50px;
}

.card {
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
}

/* Section Header */
.section-header {
  margin-bottom: 30px;
}

.section-header h1 {
  font-size: 30px;
}

.section-header-breadcrumb {
  margin-top: 10px;
  font-size: 14px;
}

/* Button */
.btn-info {
  border-radius: 30px;
  padding: 10px 20px;
}

/* Form Elements */
.form-group {
  margin-bottom: 20px;
}

.form-control {
  padding: 15px;
  font-size: 16px;
  border-radius: 10px;
  border: 1px solid #ddd;
}

.form-control:disabled {
  background-color: #f9f9f9;
  cursor: not-allowed;
}

/* Carousel Styles */
.carousel-inner {
  border-radius: 10px;
  overflow: hidden;
}

.carousel-item img {
  height: 300px;
  object-fit: cover;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  border-radius: 50%;
}

/* Cards Styling */
.card-body {
  padding: 25px;
}

.card-body h4 {
  font-size: 22px;
}

.text-primary {
  color: black !important;
}

/* Responsive Styling */
@media (max-width: 768px) {
  .col-md-6, .col-lg-4, .col-lg-8 {
    margin-bottom: 20px;
  }

  .card-body h4 {
    font-size: 20px;
  }

  .form-control {
    font-size: 14px;
  }

  .carousel-item img {
    height: 200px;
  }
}

</style>