< <div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>View Banner</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/Dashboard">Dashboard</a></div>
        <div class="breadcrumb-item"><a href='/banner_list'>Banner</a></div>
        <div class="breadcrumb-item">View Banner</div>
      </div>
    </div>
    <div class="section-body">
      <div class="card">
        <form action="/admin/update_banner/<%=cateData._id%>" id="addForm" method="post" enctype="multipart/form-data">
          <div class="row mt-sm-4 justify-content-center ">
            <div class="col-12 col-md-12 col-lg-4">
              <div class="card profile-widget">

                <div class="profile-widget-header text-center py-3">
                  <% if(cateData.banner_image !='' ) { %>
                    <td> <img alt="" width="200" height="200" id="blah" src="<%=cateData.banner_image%>"
                        class="profile_img rounded-circle">
                      <input type="file" name="banner_image" title="" value="<%= cateData.banner_image %>" id="imgInp"
                        accept="image/x-png,image/gif,image/jpeg"
                        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                    </td>
                    <% } else { %>
                      <td> <img src="/assets/img/defaultimage.jpg" width="200" height="200" id="blah"
                          class="profile_img rounded-circle" alt=""></td>
                      <% } %>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-10 offset-lg-0">
              <form action="" method="post" class="needs-validation" enctype="multipart/form-data" novalidate="">
                <div class="card-body">


                  <div class="form-group">
                    <div class="col-sm-12 col-md-12 text-right mt-4">
                      <button type="submit" class="btn btn-success">Back</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
  </div>


  <script>
    imgInp.onchange = evt => {
      const [file] = imgInp.files
      if (file) {
        blah.src = URL.createObjectURL(file)
      }
    }
  </script>