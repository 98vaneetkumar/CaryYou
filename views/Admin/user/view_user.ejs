<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- External CSS -->
<style>
  .filter-options {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Arial', sans-serif;
  }

  .filter-options select {
    height: auto !important;
    width: 120px;
    padding: 8px 10px;
    border: 1px solid #ccc;
    border-radius: 25px;
    font-size: 13px;
    background-color: #f4f4f9;
    color: #333;
    appearance: none;
    outline: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Context for each graph
    const userGraphCtx = document.getElementById("userGraph").getContext("2d");
    const orderGraphCtx = document.getElementById("orderGraph").getContext("2d");
    const revenueGraphCtx = document.getElementById("revenueGraph").getContext("2d");

    // User Graph setup (Static Data)
    const userGraph = new Chart(userGraphCtx, {
      type: "bar",
      data: {
        labels: ["Success Orders", "Cancelled Orders"],
        datasets: [
          {
            label: "Count",
            data: [15, 5], // Static data
            backgroundColor: ["#6666ff", "#33cc99"],
            borderColor: ["#4444ff", "#33aa99"],
            borderWidth: 1,
          },
        ],
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false },
          title: { display: true, text: "User Order Statistics" },
        },
      },
    });

    // Order Graph setup (Static Data)
    const orderGraph = new Chart(orderGraphCtx, {
      type: "doughnut",
      data: {
        labels: [
          "Active Orders",
          "Delivered Orders",
          "Cancelled Orders",
          "Pending Orders",
        ],
        datasets: [
          {
            label: "Orders",
            data: [20, 40, 10, 30], // Static data
            backgroundColor: ["#28a745", "#007bff", "#dc3545", "#ffc107"],
            borderColor: ["#1d7a34", "#0056b3", "#a71d2a", "#d39e00"],
            borderWidth: 1,
          },
        ],
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: "bottom" },
          title: { display: true, text: "Order Statistics" },
        },
      },
    });

    // Revenue Graph setup (Static Data)
    const revenueGraph = new Chart(revenueGraphCtx, {
      type: "line",
      data: {
        labels: [
          "December 1",
          "December 2",
          "December 3",
          "December 4",
          "December 5",
          "December 6",
          "December 7",
        ],
        datasets: [
          {
            label: "Revenue",
            data: [100, 200, 150, 300, 250, 180, 210], // Static data
            backgroundColor: "rgba(76, 175, 80, 0.2)",
            borderColor: "rgba(76, 175, 80, 1)",
            borderWidth: 2,
          },
        ],
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: true },
          title: { display: true, text: "Revenue Over Time" },
        },
      },
    });
  });
</script>
