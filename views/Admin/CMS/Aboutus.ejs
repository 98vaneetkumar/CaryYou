<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>About us</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/Dashboard">Dashboard</a></div>
        <div class="breadcrumb-item">About Us</div>
      </div>
    </div>
    <div class="section-body">
      <div class="card">
        <div class="card-body">
          <form action="/admin/Update_aboutus" method="post">
            <div class="form-group row mb-2">
              <label class="col-form-label text-md-left col-10 col-md-1 col-lg-1">Title </label>
              <div class="col-sm-12 col-md-12">
                <input type="text" name="title" value="<%=data?.title%>" class="form-control" disabled>
              </div>
            </div>
            <div class="form-group row mb-2">
              <label class="col-form-label col-12 col-md-3 col-lg-3">Description</label>
              <div class="col-sm-12 col-md-12">
                <textarea class="content" id="content" name="description" class="form-control"
                  required> <%=data?.description%> </textarea>
                <input type="hidden" name="id" value="<%=data?.id%>"> <br>
                <div class="w-100 d-flex justify-content-end">
                  <button type="submit" class="btn btn-success">Submit <i
                      class="icon-arrow-right14 position-right"></i></button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>


<script>
  ClassicEditor
    .create(document.querySelector('#content'))
    .catch(error => {
      console.error(error);
    });
</script>