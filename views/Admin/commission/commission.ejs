<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Admin Commission</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a></div>
        <div class="breadcrumb-item">Commission</div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <form action="/admin/update_commission" id="addForm" enctype="multipart/form-data" method="post">
          <div class="row mt-sm-4 justify-content-center">
            <div class="col-12 col-md-12 col-lg-10 offset-lg-0">
              <div class="card-body p-0">
                <div class="form-group w-100 floating-addon">
                  <label for="name">Admin</label>
                  <div class="input-group">
                    <input id="name" type="text" class="form-control" name="admincommission"
                      value="<%=users.admincommission%>" placeholder="Commission" required>
                    <div class="input-group-append">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="text-right mt-4">
                  <button type="submit" class="btn btn-info">
                    Submit
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<style>
  .error {
    color: red !important;
  }
</style>

<script>
  $(document).ready(function () {
    jQuery.validator.addMethod("noSpace", function (value, element) {
      return value == '' || value.trim().length != 0;
    }, "Spaces are not allowed.");

    jQuery.validator.addMethod("emailExt", function (value, element) {
      return value.match(/^[a-zA-Z0-9_\.%\+\-]+@[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,}$/);
    }, "Please enter a valid email address.");

    $('form[id="addForm"]').validate({
      rules: {
        admincommission: {
          required: true,
          number: true,
          min: 0,
          max: 100
        },
      },
      messages: {
        admincommission: {
          required: "Commission is required.",
          number: "Please enter a valid number.",
          min: "Commission must be at least 0.",
          max: "Commission must be at most 100."
        },
      },
      submitHandler: function (form) {
        form.submit();
      }
    });
  });
</script>
