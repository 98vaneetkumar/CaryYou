<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Edit Vehicle Type</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a></div>
        <div class="breadcrumb-item"><a href='/admin/vehicleType_list'>Vehicle Type</a></div>
        <div class="breadcrumb-item">Edit Vehicle Type</div>
      </div>
    </div>
    <div class="section-body">
      <div class="card">
        <form action="/admin/update_vehicleType" id="addForm" method="post" enctype="multipart/form-data">
          <div class="row mt-sm-4 justify-content-center">
            <div class="col-12 col-md-12 col-lg-4">
              <div class="card profile-widget bg-white">
                <div class="profile-widget-header text-center py-3">
                  <img alt="image" width="200" height="200" id="blah" src="<%=editData.image%>"
                    class="profile_img rounded-circle border">
                  <input type="file" name="image" id="imgInp" accept="image/png,image/jpeg,image/gif"
                    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-10">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" id="name" name="name" value="<%=editData.name%>" required>
                  <input type="hidden" name="id" value="<%=editData._id%>">
                </div>
                <div class="text-right mt-4">
                  <button type="submit" class="btn btn-success">Update</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<script>
  document.getElementById('imgInp').addEventListener('change', function (event) {
    const file = event.target.files[0];
    if (file) {
      document.getElementById('blah').src = URL.createObjectURL(file);
    }
  });

  $(document).ready(function () {
    $('#addForm').validate({
      rules: {
        name: {
          required: true,
          maxlength: 50,
          noSpace: true
        }
      },
      messages: {
        name: {
          required: "Vehicle Type Name is required.",
          maxlength: "Name cannot exceed 50 characters.",
          noSpace: "This field cannot be empty or contain only spaces."
        }
      },
      submitHandler: function (form) {
        form.submit();
      }
    });

    jQuery.validator.addMethod("noSpace", function (value) {
      return value.trim().length !== 0;
    }, "This field cannot be empty or contain only spaces.");
  });
</script>

<style>
  .error {
    color: red !important;
  }
</style>
