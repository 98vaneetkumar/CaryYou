<!-- Main Content -->
<div class="main-content">
  <div class="form-group col-12">
    <section class="section">
      <div class="section-header">
        <h1>Add Vehicle Type</h1>
        <div class="section-header-breadcrumb">
          <div class="breadcrumb-item active">
            <a href="/admin/dashboard">Dashboard</a>
          </div>
          <div class="breadcrumb-item">Add Vehicle Type</div>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <form
            action="/admin/Create_vehicleType"
            id="addForm"
            enctype="multipart/form-data"
            method="post"
          >
            <div class="row mt-sm-4 justify-content-center">
              <!-- Back Button -->
              <div class="col-12 col-md-12 col-lg-10 offset-lg-0">
                <div class="card-body p-0">
                  <!-- Back Button positioned on the left of Vehicle Type Name -->
                  <a
                    href="/admin/vehicleType_list"
                    class="btn btn-dark mb-2"
                    style="font-size: 14px; margin-top: -10px"
                  >
                    <i class="fas fa-arrow-left"></i> Back
                  </a>

                  <div class="form-group w-100 floating-addon">
                    <label for="name">Vehicle Type Name</label>
                    <input
                      id="name"
                      type="text"
                      class="form-control"
                      name="name"
                      placeholder="Vehicle Type Name"
                      required
                    />
                  </div>
                  <div class="form-group w-100 floating-addon">
                    <label for="category">Category</label>
                    <input
                      id="category"
                      type="text"
                      class="form-control"
                      name="category"
                      placeholder="Vehicle Category (e.g., Bike, Auto, Car)"
                      required
                    />
                  </div>
                  <div class="form-group w-100 floating-addon">
                    <label for="fuelType">Fuel Type</label>
                    <select
                      id="fuelType"
                      name="fuelType"
                      class="form-control"
                      required
                    >
                      <option value="">Select Fuel Type</option>
                      <option value="Petrol">Petrol</option>
                      <option value="Diesel">Diesel</option>
                      <option value="Electric">Electric</option>
                      <option value="Hybrid">Hybrid</option>
                    </select>
                  </div>
                  <div class="text-right mt-4">
                    <button type="submit" class="btn btn-info">Submit</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>

<style>
  .error {
    color: red !important;
  }

  /* Make the form more compact */
  .card-body {
    padding: 20px;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-control {
    padding-left: 15px; /* Remove space on the left side inside the input */
    padding-right: 15px; /* Optional: to make the padding more consistent */
    border-radius: 12px; /* Add rounded corners */
  }

  /* Optional: Reduce input field width */
  .form-group .form-control {
    width: 100%;
    max-width: 500px; /* Limit maximum width */
  }

  .btn {
    border-radius: 12px; /* Rounded corners for the button */
  }

  /* Position the Back button */
  .btn-secondary {
    margin-left: 10px;
    margin-top: -10px;
  }
</style>

<script>
  // Function to preview the image before submitting
  function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function () {
      const imgElement = document.getElementById("blah");
      imgElement.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  }
</script>

<script>
  $(document).ready(function () {
    // jQuery validation custom methods
    jQuery.validator.addMethod("noSpace", function (value, element) {
      return value == "" || value.trim().length != 0;
    });

    $('form[id="addForm"]').validate({
      rules: {
        name: {
          required: true,
          noSpace: true,
          maxlength: 50,
        },
        category: {
          required: true,
          noSpace: true,
          maxlength: 50,
        },
        fuelType: {
          required: true,
        },
        // image: {
        //     required: true
        // }
      },
      messages: {
        name: {
          required: "This field is required.",
          noSpace: "Spaces are not allowed.",
          maxlength: "Vehicle Type Name should be less than 50 characters.",
        },
        category: {
          required: "This field is required.",
          noSpace: "Spaces are not allowed.",
          maxlength: "Category should be less than 50 characters.",
        },
        fuelType: {
          required: "Please select a fuel type.",
        },
        // image: {
        //     required: "Please upload an image."
        // }
      },
      submitHandler: function (form) {
        form.submit();
      },
    });
  });
</script>
